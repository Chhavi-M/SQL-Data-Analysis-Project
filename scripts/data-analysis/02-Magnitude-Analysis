/*
===============================================================================
Magnitude Analysis

Purpose: To quantify data and group results by specific dimensions 
         for understanding data distribution across categories.
===============================================================================
*/

-- Find total products and brands available in each category
SELECT product_category,
       COUNT(DISTINCT product_name) AS total_products,
       COUNT(DISTINCT product_brand) AS total_brands_available
FROM gold_product_catalog
GROUP BY product_category
ORDER BY total_products DESC;

-- Fine total brands available for each product
SELECT DISTINCT product_name,
       COUNT(product_brand) AS total_brands_available
FROM gold_product_catalog
GROUP BY 1
ORDER BY 2 DESC;

-- What is the average product cost and average product price in each category?
SELECT product_category,
	   ROUND(AVG(unit_price),2) AS avg_product_cost,
       ROUND(AVG(mrp),2) AS avg_product_price
FROM gold_product_catalog
GROUP BY product_category
ORDER BY 2 DESC,3 DESC;

-- What is the total revenue generated by each product?
SELECT p.product_name,
       ROUND(SUM(o.quantity_ordered*o.product_mrp),2) AS total_revenue
FROM gold_product_catalog p
LEFT JOIN gold_order_details o
ON p.product_id = o.product_id
GROUP BY p.product_name
ORDER BY total_revenue DESC;

-- What is the total revenue generated by each product category?
SELECT p.product_category,
       ROUND(SUM(o.quantity_ordered*o.product_mrp),2) AS total_revenue
FROM gold_product_catalog p
LEFT JOIN gold_order_details o
ON p.product_id = o.product_id
GROUP BY p.product_category
ORDER BY total_revenue DESC;

-- What is the total revenue generated by each product brand?
SELECT p.product_brand,
       ROUND(SUM(o.quantity_ordered*o.product_mrp),2) AS total_revenue
FROM gold_product_catalog p
LEFT JOIN gold_order_details o
ON p.product_id = o.product_id
GROUP BY p.product_brand
ORDER BY total_revenue DESC;

-- What is the margin % for each category?
WITH category_sales_data AS (SELECT p.product_category, 
                                    ROUND(SUM(o.quantity_ordered*o.product_mrp),2) AS total_sales,
                                    ROUND(SUM(o.quantity_ordered*o.unit_price),2) AS total_cost
							 FROM gold_product_catalog p
							 LEFT JOIN gold_order_details o
							 ON p.product_id = o.product_id
							 GROUP BY p.product_category
                             )
                             
SELECT product_category,
       CONCAT(ROUND(((total_sales-total_cost)/total_sales)*100,2),'%') AS margin_percent
FROM category_sales_data
ORDER BY margin_percent DESC;

-- Find total orders and average order value for each customer
SELECT c.customer_id,
       c.customer_name,
       COUNT(o.order_id) AS total_orders,
       ROUND(AVG(o.quantity_ordered*o.product_mrp),2) AS avg_order_value
FROM gold_customer_profile c
LEFT JOIN gold_order_details o
ON c.customer_id = o.customer_id
GROUP BY 1,2
ORDER BY 3 DESC;
